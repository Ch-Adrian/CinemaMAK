<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.cs.to.cinemamak.controller.TicketsController">
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0">
        <TableView fx:id="performancesList" prefHeight="200">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" />
                <TableColumn fx:id="roomColumn" text="Room" />
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="priceColumn" text="Price" />
            </columns>
        </TableView>
        <GridPane fx:id="seatsTable" alignment="CENTER" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="sellButton" onAction="#sellTicket" text="Sell ticket" />
            <Button fx:id="cancelReservationButton" onAction="#cancelReservation" text="Cancel reservation" />
        </HBox>
    </VBox>
   <padding>
      <Insets bottom="5.0" left="10.0" right="5.0" top="10.0" />
   </padding>
</ScrollPane>
